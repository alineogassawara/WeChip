@model ClienteModel
@{
    if (Context.Request.RouteValues.ContainsKey("id"))
        ViewBag.Subtitulo = "Alteração de Cliente";
    else
        ViewBag.Subtitulo = "Cadastro de Cliente";    
}

<br>
<h1 class="text-primary">@ViewBag.Subtitulo</h1>

<form asp-action="Cadastrar" class="row">
    <input type="hidden" asp-for="@Model.IdCliente">
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Nome">Nome</label><br>
        <input asp-for="@Model.Nome" class="form-control" autofocus>
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Sobrenome">Sobrenome</label><br>
        <input asp-for="@Model.Sobrenome" class="form-control" autofocus>
        <span asp-validation-for="@Model.Sobrenome" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Cpf">CPF</label><br>
        <input asp-for="@Model.Cpf" class="form-control" autofocus>
        <span asp-validation-for="@Model.Cpf" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Credito">Crédito</label><br>
        <input asp-for="@Model.Credito" class="form-control" autofocus>
        <span asp-validation-for="@Model.Credito" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="form-group col-sm-8 col-lg-4">
        <label asp-for="@Model.Telefone">Telefone</label><br>
        <input asp-for="@Model.Telefone" class="form-control" autofocus>
        <span asp-validation-for="@Model.Telefone" class="text-danger"></span>
    </div>
    <div class="w-100"></div>
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary">Cancelar</a>
        <button class="btn btn-primary" type="submit">Salvar</button>
    </div>
</form>